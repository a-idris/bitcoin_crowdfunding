doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")        
        title bitcoin crowdfunding - #{title}
        link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin="anonymous")
        link(rel='stylesheet', href='/css/style.css')
    body
        header.mb-3
            nav.navbar.navbar-expand-md.bg-dark.navbar-dark
                span.nav-brand.my-auto.h2.text-light.mr-4 bitcoin crowdfund
                //- toggle nav links button
                button.navbar-toggler(type="button", data-toggle="collapse", data-target="#collapsibleNavbar")
                    span.navbar-toggler-icon
                //- collapsible
                .collapse.navbar-collapse#collapsibleNavbar
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/") Home
                        li.nav-item
                            a.nav-link(href="/users") Users
                        if session && session.user_id
                            li.nav-item 
                                a.nav-link(href=`/users/${session.user_id}`) Profile
                        li.nav-item
                            if !session.user_id
                                a.nav-link(href="/login") Log in
                            else 
                                a.nav-link(href="/logout") Log out
                    //- search bar
                    form.form-inline(action="")
                        input.form-control.mr-1(type="search", placeholder="Search")
                        button.btn.btn-outline-primary(type="submit") Search
        main.container     
            block content
        footer.footer.bg-dark.text-center
            span.text-muted 2018

        block scripts
            script(src="https://code.jquery.com/jquery-3.3.1.min.js", integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=", crossorigin="anonymous")
            script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js", integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
            script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js", integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")
            script(src="/js/util.js")