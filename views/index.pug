extends layout

block content
    p Welcome to #{title}
    h2 Projects

    ul
        for project in projects
            li
                a(href=`/projects/${project.project_id}`)
                    div.project
                        p #{project.title}
                        a(href=`users/2`) by #{project.username}
                        p #{project.short_description}
                        p #{project.amount_raised} over #{project.fund_goal}
                        p #{project.deadline}
    